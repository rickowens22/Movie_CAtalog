@model MovieCatalog.Models.Movie

<h2>Удалить фильм</h2>
<p>Вы уверены, что хотите удалить "@Model.Title"?</p>

<form asp-action="Delete" asp-controller="Movies" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
    <a asp-action="Index" asp-controller="Movies" class="btn btn-secondary">Отмена</a>
</form>
